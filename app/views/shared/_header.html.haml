.header
  .header-innner
    .header_top__title
      = link_to root_path,class: 'header_top__title--logo' do
        = image_tag('https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1016580576', :class => "mercari_logo")
    .header_top__form
      .header_top__form--input-box
      = form_tag('search_articles_path', method: :get) do
        = text_field_tag :q, '', class: 'header_top__form--input-box__text', placeholder: '何かお探しですか？'
        = link_to root_path, class: 'header_top__form--input-box__btn' do
          = fa_icon "search"
  .header-nav.clearfix